@using BasicBlazorLibrary.Components.BaseClasses
@using BasicBlazorLibrary.Components.Modals
@inherits PopupBase
<PopupCornered CornerPosition="EnumCornerPosition.TopRight"
               @bind-Visible="Visible"
               DisableBackgroundClick="false"
               Margins="10px;"
               BackgroundColor="black"
               FullScreen="false"
               ShowHeader="false"
               Style="@GetMainStyle()"
               Width="@Width"
               Height="@Height">
    @foreach (var item in MenuList)
    {
        <div class="clickable" @onclick="() => ClickMenu(item)">
            @item.Text
        </div>
    }
</PopupCornered>


